{{#each recipes as |recipe|}}
  <section data-id="{{recipe._id}}">
    <h6>Title:</h6>
    <h3>
      {{recipe.title}}
    </h3>
    <h6>Ingredients:</h6>
    <p>
      {{recipe.ingredients}}
    </p>
    <br>
    <h6>Steps:</h6>
    <p>
      {{recipe.steps}}
    </p>
    <br>
    <button class="btn btn-danger" data-id="{{recipe._id}}">Delete recipe</button>
    <br>
    <p>Update recipe</p>
    <form class='form' data-id="{{recipe._id}}">
      <input required placeholder="Title" type="text" name="recipe[title]">
      <input required placeholder="Ingredients" type="text" name="recipe[ingredients]">
      <input required placeholder="Steps" type="text" name="recipe[steps]">
      <br>
      <button class="btn btn-primary" type='submit'>Update recipe</button>
    </form>
  </section>
{{/each}}
